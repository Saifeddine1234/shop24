<!DOCTYPE html>
<head>

</head>
<%-include('head.ejs')%>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <%-include('logomini.ejs')%>

    <!-- Offcanvas Menu End -->

    <!-- Header Section Begin -->
    <%-include('nav.ejs')%>

     <!-- Breadcrumb Begin -->
     <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="/"><i class="fa fa-home"></i> Accueil</a>
                        <span>Favori</span>
                    </div>
                </div>
                <br>
                
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Shop Section Begin -->
    <% if(cart){%>

    <section class="shop spad">
        <div class="container">
            <div class="row">                 
                <div class="col-lg-9 col-md-9">
                    <div class="row">
                        <% let index = 0 %>
                        <% for (let c of cart.Favs){ %>
                             <tr>
                             <div class="col-lg-4 col-md-6">
                             <div class="card" style="width: 18rem;">
                                <% index++%>
                            <div class="product__item">
                                <div class="product__item__pic " style="background-image : url('img/product/<%=c.urlimage%>');background-size: contain;background-repeat: no-repeat; background-position: center;">
                                  <!--<div class="label new">New</div>-->  
                                    <ul class="product__hover">
                                        <li><a href="img/product/<%=c.urlimage%>" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href=""><%=c.nom%></a></h6>
                                    <div class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                    <div class="product__price"><%=c.prix%> DT</div>
                                </div>
                            </div>
                        </div>

                        </div>
</tr>
                        <%}%>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->
<% }else { %>
    <h1 style="padding-top: 100px;"> <center><%=message%></center></h1>

<%}%>
    <!-- Instagram Begin -->
 
<%-include('section1.ejs')%>

    <!-- Instagram End -->
    <%-include('footer.ejs')%>


</html>