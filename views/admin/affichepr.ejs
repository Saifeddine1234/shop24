<%-include('head.ejs')%>

<body>
    <div class="container">
        <h1 class="text-center ">Produits</h1>
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col" class="text-center "></th>
                    <th scope="col" class="text-center ">Nom </th>
                    <th scope="col" class="text-center ">Prix</th>
                    <th scope="col" class="text-center ">Categorie</th>
                    <th scope="col" class="text-center ">SousCategorie</th>
                    <th scope="col" class="text-center ">SousSous Categorie</th>
                    <th scope="col" class="text-center ">Description</th>
                    
                    <th scope="col" class="text-center ">Supprimer</th>
                    <th scope="col" class="text-center ">Modifier</th>

                </tr>
            </thead>
            <tbody>
                <% var index = 1%>
                <% for(var i of produit){%>
                <tr>
                    <td class="text-center "><%=index++%></td>
                    <td class="text-center "><%=i.nom%></td>
                    <td class="text-center "><%=i.prix%> DT</td>
                    <td class="text-center "><%=i.categorie%> </td>
                    <td class="text-center "><%=i.souscategorie%> </td>
                    <td class="text-center "><%=i.Soussouscategorie%> </td>
                    <td class="text-center "> <%=i.information.desc%></td>
                      <td class="text-center "><a href="/admin/supprimerpr/<%=i._id%>"><button class="btn btn-danger">Supprimer</button></a></td>
                      <td class="text-center "><a href="/admin/modifierpr/<%=i._id%>"><button class="btn btn-primary">Modifier</button></a></td>
              

                </tr>
                <%}%>
          </table>
</div>
<div class="text-center "><a href="/admin/produit"><button class="btn btn-primary">Ajouter Produits</button></a> <a href="/admin/admin"><button class="btn btn-secondary">Retour</button></a></div></div>

</body>