<%-include('head.ejs')%>
<body>
  <form id="" class="" method="post" action="modifierpr"  style="margin-top: 30px;">
    <div class="form-group">
      <label for="UserName"><b>Nom </b></label>
      <input type="text" class="form-control" value="<%=i.nom%>" placeholder="saisir le Nom de produit" name="nomproduit">
    </div>
    <div class="form-group">
      <label for="email"><b>Prix</b></label>
      <input type="number"  step="0.001" class="form-control"  value="<%=i.prix%>" placeholder="saisir le Prix de produit" name="prixproduit">
    </div>
    <div class="form-group">
      <label for="Contact"><b>Url </b></label>
      <input type="text" class="form-control"  value="<%=i.urlimage%>"placeholder="saisir le lien de l'image" name="urlproduit">
    </div>
    <div class="form-group">
      <label for="Adress"><b>Description</b></label>
                <textarea type="textarea"  value="<%=i.information.desc%>"class="form-control" placeholder="description .." name="descproduit">
    </textarea>
    </div>
      
    <div class="text-center">
      <button type="submit" class="btn btn-success">Modifier</button>
      <a href="/admin/affichepr" class="btn btn-danger">Retour</a>
    </div>
  </form>
  </body>
  </html>
