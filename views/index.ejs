        </ul>
      </div>
      </div>
      </nav></div>
    </div>
    <div class="container">
      <h1><%= title %></h1>
      <br>
      <%if(successMes){%>
        <div class="alert alert-success"> <%=successMes%></div>
    <%}%>
       <div class="row">
        <% for (let produit of produits){ %>
          <div  class="col-sm-3">
          <div class="card"   style="width: 17rem;">
        <img src="<%=produit.urlimage %>" height="300" weight="200" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%=produit.nom %></h5>
          <p class="card-text">Capacité de memoire : <%=produit.information.capacite %> Go</p>
          <p class="card-text">Sim : <%=produit.information.sim %></p> 
          <p class="card-text">memoire RAM :  <%=produit.information.ram %> Go</p>
          <div>
      <div class="prix float-left"><b><%=produit.prix %> DT</b></div>
    <% if(check){%>
      <a href="/add/<%=produit._id %>/<%=produit.prix %>/<%=produit.nom %>" class="btn btn-success float-right">ajouter</a>
     <%}else{%>
      <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#exampleModalCenter">
ajouter      
</button>
  <% } %>

    
    </div>
        </div>
      </div>
          </div>
         <% } %>  
    </div>
      </div>
      
  </body>
</html>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Creer un compte</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <a href="/users/signup"><button type="button" class="btn btn-primary">Inscrire</button></a>
      </div>
    </div>
  </div>
</div>
